# Variables de entorno para Docker Compose
# Copia este archivo como .env.docker y modifica los valores según necesites

# Base de datos
POSTGRES_DB=poliacredita_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432

# Aplicación
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Seguridad
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h

# Configuración de la aplicación
APP_NAME=Poliacredita API
APP_DESCRIPTION=API para la gestión de Resultados de Aprendizaje de Asignatura

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
